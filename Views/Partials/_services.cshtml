@inherits Umbraco.Web.Mvc.UmbracoViewPage

@{
	var sectionTitle = Umbraco.ContentAtRoot().FirstOrDefault().ChildrenOfType("services").Where(x => x.IsVisible());
	var services = Model.Root()?.FirstChildOfType("services")?.ChildrenOfType("service").Where(x => x.IsVisible());
}



	<!-- SERVICES -->
	<section id="services">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="section-title">
            	        @foreach (var item in sectionTitle)
{
						<h1>@item.Value("sectionTitle")</h1>
}
						<span class="st-border"></span>
					</div>
				</div>

        		@foreach (var item in services) 
        		{
        			var cls = services.First() == item ? "active" : null;
        			
        			<div class="col-md-4 col-sm-6 st-service @cls">
        				<h2><i class="fa @item.Value("serviceIcon")"></i> @item.Value("serviceTitle")</h2>
        				<p>@item.Value("serviceDescription")</p>
        			</div>
        		}

			</div>
		</div>
	</section>
	<!-- /SERVICES -->